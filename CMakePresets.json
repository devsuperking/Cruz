{
	"version": 3,
	"cmakeMinimumRequired": {
		"major": 3,
		"minor": 21
	},

	"configurePresets": [
		{
			"name": "desktop",
			"displayName": "Desktop (Default Compiler)",
			"description": "Debug build using the system's default compiler (MSVC, GCC, or Clang).",
			"generator": "Ninja",
			"binaryDir": "out/desktop",
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "Debug",
				"CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
			}
		},
		{
			"name": "emscripten",
			"displayName": "WebAssembly (Emscripten)",
			"description": "Release build targeting WebAssembly using the Emscripten toolchain.",
			"generator": "Ninja",
			"binaryDir": "out/web",
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "Release",
				"CMAKE_TOOLCHAIN_FILE": "$env{EMSDK}/upstream/emscripten/cmake/emscripten.cmake",
				"CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
				"BUILD_TARGET": "emscripten"
			}
		}
	],

	"buildPresets": [
		{
			"name": "desktop",
			"displayName": "Build Desktop (Default)",
			"configurePreset": "desktop"
		},
		{
			"name": "emscripten",
			"displayName": "Build WebAssembly",
			"configurePreset": "emscripten"
		}
	]
}